<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Page"
    sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="[cq.common.wcm,core.wcm.components.page.v3.editor,cq.wcm.msm.properties,granite.contexthub.configuration,cq.siteadmin.admin.properties,core.wcm.components.image.v3.editor]"
    helpPath="https://www.adobe.com/go/aem_cmp_page_v3"
    mode="edit"
    trackingFeature="core-components:page:v3">
    <content
        granite:class="cq-dialog-content-page"
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                granite:class="cq-siteadmin-admin-properties-tabs"
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                size="L">
                <items jcr:primaryType="nt:unstructured">
                    <eventconfig
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Event Configurations"
                        sling:orderBefore="basic"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <startdate
                                        cq:showOnCreate="{Boolean}true"
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/datepicker"
                                        displayedFormat="MMM DD, YYYY hh:mm a"
                                        emptyText="Enter Event Start Date"
                                        fieldDescription="Choose event start date and time"
                                        fieldLabel="Event Start Date"
                                        name="./startDate"
                                        type="datetime"
                                        typeHint="Date"/>
                                    <enddate
                                        cq:showOnCreate="{Boolean}true"
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/datepicker"
                                        displayedFormat="MMM DD, YYYY hh:mm a"
                                        emptyText="Enter Event End Date"
                                        fieldDescription="Choose event end date and time"
                                        fieldLabel="Event End Date"
                                        name="./endDate"
                                        type="datetime"/>
                                    <retirementdate
                                        cq:showOnCreate="{Boolean}true"
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/datepicker"
                                        displayedFormat="MMM DD, YYYY"
                                        emptyText="Enter Retirement Date"
                                        fieldDescription="Choose event retirement date"
                                        fieldLabel="Event Retirement Date"
                                        name="./retirementDate"
                                        type="datetime"
                                        typeHint="Date"/>
                                    <updateddate
                                        cq:showOnCreate="{Boolean}true"
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/datepicker"
                                        displayedFormat="MMM DD, YYYY"
                                        emptyText="Enter Event Updated Date"
                                        fieldDescription="Choose event updated date"
                                        fieldLabel="Event Updated Date"
                                        name="./updatedDate"
                                        type="datetime"/>
                                    <readcount
                                        cq:showOnCreate="{Boolean}true"
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                        emptyText="Depicts page read count"
                                        fieldDescription="Value depicts page read count"
                                        fieldLabel="Read Count"
                                        name="./readCount"/>
                                    <eventtype
                                        cq:showOnCreate="{Boolean}true"
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        emptyText="Enter Event Type"
                                        fieldDescription="Event type goes here"
                                        fieldLabel="Event Type"
                                        name="./eventType"/>
                                    <eventags
                                        cq:showOnCreate="{Boolean}true"
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="cq/gui/components/coral/common/form/tagfield"
                                        emptyText="Choose Event Tags"
                                        fieldDescription="Choose event tags from the available"
                                        fieldLabel="Event Tags"
                                        multiple="{Boolean}true"
                                        name="./eventTags"/>
                                </items>
                            </column>
                        </items>
                    </eventconfig>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
