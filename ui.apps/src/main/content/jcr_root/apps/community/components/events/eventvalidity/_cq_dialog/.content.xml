<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Properties Config"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <updateddate
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/datepicker"
                        displayedFormat="MMM DD, YYYY"
                        fieldDescription="Choose event updated date"
                        fieldLabel="Event Details Update Date"
                        name="./updatedDate"
                        required="{Boolean}true"
                        type="datetime"/>
                    <retirementdate
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/datepicker"
                        displayedFormat="MMM DD, YYYY"
                        fieldDescription="Choose event end date and time"
                        fieldLabel="Event End Date"
                        name="./retirementDate"
                        required="{Boolean}true"
                        type="datetime"/>
                    <readcount
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                        fieldDescription="Enter the number of read count here"
                        fieldLabel="Enter Read Count"
                        min="1"
                        name="./readCount"/>
                </items>
            </column>
        </items>
    </content>
</jcr:root>
